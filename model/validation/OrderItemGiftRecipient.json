{
	"conditions":{
		"giftCardCodeIsNotAutoGenerated": {
			"orderItem.sku.giftCardAutoGenerateCodeFlag":{"eq":false}
		},
		"recipientContactInfoNeeded":{
			"orderItem.sku.giftCardRecipientRequiredFlag":{"eq":true}
		},
		"orderItemWithFulfillmentTypeIsEmail":{
	        "orderItem.orderFulfillment.fulfillmentMethod.fulfillmentMethodType":{"eq":"email"}
	    }
	},
	"properties":{
		"orderItem":				[{"contexts":"save","required":true}],
		"emailAddress":             [{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true},{"contexts":"save","conditions":"orderItemWithFulfillmentTypeIsEmail","required":true}],
		"firstName": 				[{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true},{"contexts":"save","conditions":"orderItemWithFulfillmentTypeIsEmail","required":true}],
		"giftCards":				[{"contexts":"edit,delete", "method":"canEditOrDelete"}],
		"giftMessage":              [{"contexts":"save","conditions":"recipientContactInfoNeeded","method":"hasCorrectGiftMessageLength"}],
		"lastName":					[{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true},{"contexts":"save","conditions":"orderItemWithFulfillmentTypeIsEmail","required":true}],
		"manualGiftCardCode":	 	[{"contexts":"save","required":true,"conditions":"giftCardCodeIsNotAutoGenerated"}],
        "quantity":                 [{"contexts":"save","required":true, "minValue":1},{"contexts":"save,edit","conditions":"giftCardCodeIsNotAutoGenerated","eq":1}]
	}
}
